<!--Scenario 1: Display All Services-->
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:template match="/">
        <html>
            <body>
                <h2>All Services</h2>
                <table border="1">
                    <tr bgcolor="#9acd32">
                        <th>Service Name</th>
                        <th>Provider Name</th>
                        <th>Category</th>
                    </tr>
                    <xsl:for-each select="CarePlatform/Service">
                        <tr>
                            <td><xsl:value-of select="ServiceName"/></td>
                            <td><xsl:value-of select="ProviderID"/></td>
                            <td><xsl:value-of select="Category"/></td>
                        </tr>
                    </xsl:for-each>
                </table>
            </body>
        </html>
    </xsl:template>
</xsl:stylesheet>
